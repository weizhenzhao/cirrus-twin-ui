main{background-color:#FBFBFF!important;}
html{height:100%;}
body{margin:0;padding:0;height:100%;}
*{ box-sizing: border-box; }
.rightCont{
    width:100%;
    padding:30px;
}
.title_right{
    font-size:24px;
    width:100%;
    height:50px;
    line-height:49px;
    border-bottom:1px solid #333;
    display:block;
}
.tool_new{
    width:100%;
    overflow:hidden;
}
.tool_new button{
    padding:10px;
    font-size:16px;
    text-align:center;
    border:0;
    outline:none;
    cursor:pointer;
    background:none;
    margin-top:10px;
}
.rightCont .contTable table {
    text-align: center;
}
.contTable table, .contTable td{
    border:1px solid #333;
    border-collapse:collapse;
}
.contTable td{
    height:25px;
}
.align_left{
    text-align:left!important;
    padding-left:10px;
}
.pages {
    width:100%;
    overflow:hidden;
    margin-top:15px;
}
footer{position:relative!important;}
.pages ul{
    list-style:none;
    margin:0;
    padding:0;
    float:right;
    clear:right;
}
.pages li{
    margin-left:15px;
    float:left;
}
.pages select{height:30px;width:45px;cursor:pointer;}
.contTable input[type=text]{
    width:85%;
    height:30px;
    border-radius:3px;
    border:1px solid #aaa;

}
.table_newqa td{
    padding:10px;
    text-align:left!important;
}
.table_newqa textarea{
    width:85%;
    height:90px;
}
.table_newqa button{
    width:100px;
    height:32px;
    border-radius:3px;
    text-align:center;
    color:#333;
    outline:none;
    border:0;
    cursor:pointer;
    box-shadow:1px 1px 0px #999;
    background:#ccc;
    font-size:14px;
}
.table_newqa button:active{background:#666;color:#fff;}
