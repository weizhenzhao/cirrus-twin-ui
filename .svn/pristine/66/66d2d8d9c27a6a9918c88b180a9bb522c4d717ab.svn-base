.chatArea{
    width:40%;
    float:left;
    height:100%;
    overflow:hidden;
    position:relative;
    border-right:1px solid #bfbfbf;

}
.detailAnswer{
    width:60%;
    float:left;
    height:100%;
    overflow:auto;

}
.title_chat{
    height:50px;
    background:#bfbfbf;
    padding:5px;
}
.title_chat label{
    float:left;
    display:block;
    font-size:20px;
    color:#fff;
    line-height:40px;
    padding:0 5px;
    overflow:hidden;
}
.chatList{
    min-height:480px;
    position:absolute;
    top:50px;
    overflow:hidden;
    width:100%;
    overflow:auto;
    height:64%;
}
.message{width:100%;margin-top:-1px;padding:10px;clear:right;}
.message img{float:left;}
.messageDetail{width:100%;margin-top:-1px;padding:10px;clear:right;}
.messageDetail img{float:left;}
.bubble {
    min-height: 1em;
    position: relative;
    text-align: left;
    font-size: 14px;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    margin: 0 10px;
    background-color: #fff;
    padding:6px 13px;
    word-wrap: break-word;
    word-break: break-all;
    min-height: 25px;
    margin-left:50px;

}
.bubble.left:after, .bubble.left:before {
    right: 100%;
}
.bubble:after, .bubble:before{
    position: absolute;
    top: 14px;
    border: 6px solid transparent;
    content: " ";
}
.bubble.left:after {
    border-right-color: #fff;
    border-right-width: 4px;
}
.bubble.left:after, .bubble.left:before {
    right: 100%;
}
.bubble_icon{width:40px;height:40px;}
.bubble_cont {
    word-wrap: break-word;
    word-break: break-all;
    min-height: 25px;
}
.bubble.bubble_primary {
    background-color: #b2e281;
    margin-right:50px;
}
.bubble.bubble_primary.right:after {
    border-left-color: #b2e281;
    border-left-width: 4px;
}

.bubble.right:after {
    border-left-color: #fff;
}
.bubble.right:after, .bubble.right:before {
    left: 100%;
}

.message.me {
    float: right;
    text-align: right;
    clear: right;

}
.message.me img{float:right;}
.tools{
    width:100%;
    padding:0;
    text-align:center;
    height:50px;
    background:#bfbfbf;
    position:absolute;
    bottom:180px;
}
.tools ul{list-style:none;margin:0 auto;padding:0;width:190px;overflow:hidden;margin-top:8px;}
.tools li{float:left;margin-right:20px;}
.tools img{cursor:pointer;}
.sendMesg{position:absolute;width:100%;overflow:hidden;height:150px;bottom:0;}
.sendMesg textarea {width:100%;height:100%;padding:10px;}
.voice {position:absolute;height:30px;bottom:150px;width:100%;background:#ddd;line-height:30px;}
.sendMesg button{
    position:absolute;
    bottom:10px;
    right:10px;
    width:100px;
    height:32px;
    border-radius:3px;
    text-align:center;
    color:#333;
    outline:none;
    border:0;
    cursor:pointer;
    box-shadow:1px 1px 0px #999;
    background:#ccc;
}
.sendMesg button:active{background:#666;color:#fff;}
.title_right{
    height:50px;
    padding:0 10px;
    font-size:20px;
    line-height:50px;
}
.title_center{
    height:50px;
    padding:50% 40%;
    font-size:43px;
    color:darkgray;
    line-height:50px;
}
