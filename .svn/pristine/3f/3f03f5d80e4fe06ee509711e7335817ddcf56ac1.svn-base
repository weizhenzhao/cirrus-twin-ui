.message{width:100%;margin-top:-1px;clear:right;border-bottom:0;padding:15px 0;overflow:hidden;padding-bottom:0;}
.message img{float:left;}
.messageDetail{width:100%;margin-top:-1px;padding:10px;clear:right;}
.messageDetail img{float:left;}
.bubble {
    min-height: 1em;
    position: relative;
    text-align: left;
    font-size: 14px;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    margin: 0 10px;
    background-color: #30444E;
    padding:6px 13px;
    word-wrap: break-word;
    word-break: break-all;
    min-height: 25px;
    margin-left:50px;

}
.bubble.left:after, .bubble.left:before {
    right: 100%;
}
.bubble:after, .bubble:before{
    position: absolute;
    top: 14px;
    border: 6px solid transparent;
    content: " ";
}
.bubble.left:after {
    border-right-color: #30444E;
    border-right-width: 4px;
}
.bubble.left:after, .bubble.left:before {
    right: 100%;
}
.bubble_icon{width:40px;height:40px;}
.bubble_cont {
    word-wrap: break-word;
    word-break: break-all;
    min-height: 25px;
}
.bubble.bubble_primary {
    background-color: #4c6472;
    margin-right:50px;
}
.bubble.bubble_primary.right:after {
    border-left-color: #4c6472;
    border-left-width: 4px;
}

.bubble.right:after {
    border-left-color: #fff;
}
.bubble.right:after, .bubble.right:before {
    left: 100%;
}

.message.me {
    float: right;
