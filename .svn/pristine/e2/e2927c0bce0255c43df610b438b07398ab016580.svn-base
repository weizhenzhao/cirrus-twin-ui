<div class="mainChat">
    <audio id = "resp" type="hidden" name="speechvalue"></audio>
    <div class="chatArea">
        <div class="title_chat">
           <label style="margin-top:4px;line-height:0px;"><img src="images/user1.png"></label>
           <label>User A</label>
        </div>
        <div class="chatList" id="chartContent">
           <div class="message">
               <img src="images/user11.png" width="40" height="40">
